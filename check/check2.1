#!/bin/bash

echo " ******* 2.1 Run the Docker daemon as a non-root user, if possible (Manual) ******"

str=$(ps -fe | grep 'dockerd' | sed -n 1p | cut -d " " -f 1) ;
 if [ "$str" == "root" ] ; 
 	then printf "\033[1;31m [WARN] Dockerd is running with ROOT \033[0m\n" ; else printf "\033[1;32m [PASS] \033[0m\n"; 
fi
