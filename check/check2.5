#!/bin/bash

echo " ******* 2.5 Ensure insecure registries are not used (Automated) ******"

str=$(docker info --format 'Insecure Registries:{{.RegistryConfig.InsecureRegistryCIDRs}}') 
if [  -z "$str" ] ; 
	then printf "\033[1;32m [PASS] \033[0m\n" ;
else printf "\033[1;31m [WARN] You should ensure that no insecure registries are in use. \033[0m\n";
fi