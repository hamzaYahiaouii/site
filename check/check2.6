#!/bin/bash

echo " ******* 2.6 Ensure aufs storage driver is not used (Automated) ******"

str=$(docker info --format 'Storage Driver: {{ .Driver }} ' | cut -d ' ' -f 3)
if [ "$str" != "overlay2" ] ;
then printf "\033[1;32m [PASS] \033[0m\n";
else printf "\033[1;31m [WARN] Do not explicitly use aufs as storage driver.\033[0m\n" ; 
fi
