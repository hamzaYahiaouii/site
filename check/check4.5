#!/bin/bash

echo " ******* 4.5 Ensure Content trust for Docker is Enabled (Automated) ******"

str=$(echo $DOCKER_CONTENT_TRUST)

if [ -z $str ] ; then
	printf "\033[1;31m [WARN] DOCKER_CONTENT_TRUST ins't enable\033[0m\n";
	printf "\033[1;34m [INFO] You should Add DOCKER_CONTENT_TRUST variable to the /etc/environment file using command echo DOCKER_CONTENT_TRUST=1 | sudo tee -a /etc/environment. \033[0m\n" ; else
	printf "\033[1;32m [PASS] \033[0m\n"
fi

