#!/bin/bash

echo " ******* 5.7 Ensure privileged ports are not mapped within containers (Automated) ******"

containers=$(docker ps --quiet);

if [ -z "$containers" ] ; then printf '\033[1;34m [INFO] No available containers \033[0m\n'; else 
    for c in $containers; do
      printf "\033[1;33m Container $c: \033[1;34m\n"
      fail=0
      ports=$(docker port "$c" | awk '{print $0}' | cut -d ':' -f2)
      for p in $ports; do
      if ! [ -z "$p" ] && [ "$p" -lt 1024 ] ; then
		fail=1	
      	printf "\033[1;31m [WARN] privileged port is mapped within this containers \033[0m\n"
      fi
  		done
	  if [ $fail -eq 0 ] ; then
	  	printf "\033[1;32m [PASS] \033[0m\n"; 
	  fi
  done
fi